{%  extends 'base.html.twig' %}
{%  block title %}{% endblock %}
{%  block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/dropzone/dist/dropzone.css') }}">
{% endblock %}

{%  block body %}
    {{ render(controller('App\\Controller\\HomeController::navBar', {} )) }}

<div class="container mt-5">
    <div class="row">
        <h3 class="ml-3">Add an announcement</h3>
    </div>
</div>
<div class="container mt-3 border p-4">
    {{ form_start(form) }}
            <div class="row">
                <h3 class="ml-3">Your announcement</h3>
            </div>
            <hr/>
            <div class="row">
                <h5 class="ml-3">Categories</h5>
            </div>
            <div class="row">
                <div class="col mt-4 col-md-5">
                    {{ form_row(form.category) }}
                </div>
            </div>
            <div class="row mt-4">
                <h5 class="ml-3">Title</h5>
            </div>
            <div class="row mt-4">
                <div class="col col-md-5">
                    {{ form_row(form.Name) }}
                </div>
            </div>
            <div class="row mt-4">
                <h5 class="ml-3">Description</h5>
            </div>
            <div class="row mt-4">
                <div class="col col-md-5">
                    {{ form_row(form.Description) }}
                </div>
            </div>
            <div class="row mt-4">
                <h5 class="ml-3">Price</h5>
            </div>
            <div class="row mt-4">
                <div class="col col-md-5">
                    {{ form_row(form.Price) }}
                </div>
                <div class="col col-md-1 mt-2 ">
                    <i class="fas fa-euro-sign "></i>
                </div>
            </div>
            <div class="row mt-4">
                <h3 class="ml-3">Location</h3>
            </div>
            <hr/>
            <div class="row mt-4">
                <h5 class="ml-3">City <a data-toggle="modal" data-target="#exampleModal" href="#"><i class="fas fa-plus-circle"></i></a></h5>
            </div>
            <div class="row mt-4">
                <div class="col col-md-5">
                    {{ form_row(form.city) }}
                </div>
            </div>
            <div class="row mt-4">
                <h5 class="ml-3">Address</h5>
            </div>
            <div class="row mt-4">
                <div class="col col-md-5">
                    {{ form_row(form.adress) }}
                </div>
            </div>
                <!--
            <div class="row mt-4">
                <h3 class="ml-3">Images</h3>
            </div>
            <hr/>
            <div class="row mt-4">
                <div class="col ">
                    <div class="alert alert-warning text-center" role="alert">
                       <strong>You can only upload 3 images if you put more it will not work ! </strong>
                    </div>
                    <div class="dropzone" id="my-awesome-dropzone"></div>
                    <div class="alert alert-success text-center mt-4" role="alert">
                        <strong>Image previews :</strong>
                    </div>
                    <div class="dropzone-previews dropzone mt-1"></div>
                </div>
            </div>
            -->
                <div class="row mt-4">
                    <div class="col ">
                        <button class="btn btn-outline-dark mt-2" type="submit">Next Step</button>
                    </div>
                </div>
    {{ form_end(form) }}
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {{ form_start(cityForm) }}
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add city</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_row(cityForm.name) }}
                {{ form_row(cityForm.postalCode, { 'attr' : { 'maxlength': '5', 'minlength': '5'} }) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
            {{ form_end(cityForm) }}
        </div>
    </div>
</div>


{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="{{ asset('assets/dropzone/dist/dropzone.js') }}"></script>


    <script>
        Dropzone.autoDiscover = false;
        Dropzone.options.myAwesomeDropzone = {
            previewsContainer: ".dropzone-previews",
            maxFiles: 3,
            accept: function(file, done) {
                console.log("uploaded");
                done();
            },
            init: function() {
                this.on("maxfilesexceeded", function(file){
                    this.removeFile(file);
                });
            }
        };
        $('#my-awesome-dropzone').dropzone({
            previewsContainer: ".dropzone-previews",
            url: "{{ path('newAnnouncement') }}"
        });
    </script>

{% endblock %}



