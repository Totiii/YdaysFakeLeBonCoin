{%  extends 'base.html.twig' %}
{%  block title %}{% endblock %}
{%  block stylesheets %}
{% endblock %}

{%  block body %}
    {{ render(controller('App\\Controller\\HomeController::navBar', {} )) }}

<div class="container mt-5 p-4">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="text-center card-header"> <i class="fas fa-user-tie"></i> {{ user.firstname }} {{ user.name }}</div>
                <div class="card-body">
                    <h5 class=" card-title">Email : {{ user.email }}</h5>
                    <h5 class="card-title">My announcements :</h5>
                    {% if user.announcements %}
                        {% for announcement in user.announcements %}
                            <p class="ml-5"><a href="{{ path('announcement', {'id': announcement.id }) }}">{{ announcement.name }}</a></p>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}

{% block javascripts %}

{% endblock %}



