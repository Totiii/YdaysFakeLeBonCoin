{%  extends 'base.html.twig' %}
{%  block title %}{% endblock %}
{%  block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/dropzone/dist/dropzone.css') }}">
{% endblock %}

{%  block body %}
    {{ render(controller('App\\Controller\\HomeController::navBar', {} )) }}

    <div class="container mt-5">
        <div class="row">
            <h3 class="ml-3">Add an announcement</h3>
        </div>
    </div>
    <div class="container mt-3 border p-4">
        {{ form_start(form) }}
        <div class="row">
            <h3 class="ml-3">Your announcement</h3>
        </div>
        <hr/>
        <div class="row">
            <h5 class="ml-3">Categories</h5>
        </div>
        <div class="row">
            <div class="col mt-4 col-md-5">
                {{ form_row(form.category) }}
            </div>
        </div>
        <div class="row mt-4">
            <h5 class="ml-3">Title</h5>
        </div>
        <div class="row mt-4">
            <div class="col col-md-5">
                {{ form_row(form.Name) }}
            </div>
        </div>
        <div class="row mt-4">
            <h5 class="ml-3">Description</h5>
        </div>
        <div class="row mt-4">
            <div class="col col-md-5">
                {{ form_row(form.Description) }}
            </div>
        </div>
        <div class="row mt-4">
            <h5 class="ml-3">Price</h5>
        </div>
        <div class="row mt-4">
            <div class="col col-md-5">
                {{ form_row(form.Price) }}
            </div>
            <div class="col col-md-1 mt-2 ">
                <i class="fas fa-euro-sign "></i>
            </div>
        </div>
        <div class="row mt-4">
            <h3 class="ml-3">Location</h3>
        </div>
        <hr/>
        <div class="row mt-4">
            <h5 class="ml-3">City</h5>
        </div>
        <div class="row mt-4">
            <div class="col col-md-5">
                {{ form_row(form.city) }}
            </div>
        </div>
        <div class="row mt-4">
            <h5 class="ml-3">Address</h5>
        </div>
        <div class="row mt-4">
            <div class="col col-md-5">
                {{ form_row(form.adress) }}
            </div>
        </div>
